
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%),
  <% if @tool.photo? %>
    url('<%= cl_image_path @tool.photo, height: 800, width: 1500, crop: :fill %>')
  <% elsif !@tool.picture_url.nil? %>
      url(<%= @tool.picture_url %>)
  <%else %>
    url('http://treibholzeffekt.com/wp-content/uploads/2014/12/Werkzeuge_dunkel.jpg')
  <%end %>">

  <div class="row">
    <div class="col-md-6" >
      <div class="row">
        <div class="col-md-8 col-md-offset-2 banner-show">
          <h2><%= @tool.name %></h2>
          <h3><%= @tool.description %></h3>
        </div>
      </div>
    </div>
    <div class="col-md-6">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <img src=" https://picsum.photos/300/200/?random" alt="" class="img-rounded">
          </div>
        </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="info-links">
      <% if policy(@tool).destroy? %>
        <%= link_to "Delete", tool_path(@tool), method: :delete %>
      <% end %>
      <%= link_to "Return", tools_path %>
      <% if policy(Booking).toolbox? %>
        <%= link_to "Dashboard", dashboard_path %>
      <% end %>
      <%= link_to bookings_create_path(@tool), class: "form-check form-check-inline", method: :post do %>
        <button class='btn btn-info'>
          Add to your cart
        </button>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="mapcontainer"
      id="map"
      style="width: 100%;
      height: 40vh;"
      data-markers="<%= @markers.to_json %>"
    ></div>
  </div>

  <div class="row">
    <div class="form">
      <% if policy(@tool).update? %>
        <%= render 'shared/form' %>
      <% end %>
    </div>
  </div>
</div>


